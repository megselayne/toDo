<%- include('../partials/boilerplate') %>
    <div class='container'>
        <a class='click big' href='/todos/add'>Add New Todo</a>
        <% data.todos.forEach(element => { %>
            <div class='todo'>
                <div class='top-row'>
                    <div class='left'>
                    <h1 class='todo-title'><%= element.title %></h1>
                    </div>
                    <div class='right'>
                    <h1 class='todo-sub'><%= element.status %></h2>
                    </div>
                </div>
                <div class='bottom-row'>
                    <div class='left'>
                        <h3><%= element.category %></h3>
                    </div>
                    <div class='right'>
                        <button class='click'>
                            <a class='click' href='/todos/<%= element.id%>'>Learn More</a>
                        </button>
                        <button class='click'>
                            <a class='click' href='/todos/<%= element.id%>/edit'>Edit</a>
                        </button>
                        <form method="POST" action="/todos/<%= element.id %>?_method=DELETE">
                            <input class='click' type="submit" value="Delete">
                          </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>


<%- include('../partials/end') %>